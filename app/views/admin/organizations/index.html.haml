%h1.header
  Organizations

%table.table
  - @organizations.each do |organization|
    %tr
      %td
        %h3= organization.name
      %td= link_to "Locations (#{organization.locations.try(:size)})", admin_organization_locations_path(organization), :class => 'btn btn-mini'
      %td= link_to 'Edit', edit_admin_organization_path(organization), :class => 'btn btn-mini'
      %td= link_to 'Delete', admin_organization_path(organization), :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger'

%br/
= link_to 'New Organization', new_admin_organization_path, :class => 'btn btn-success'
