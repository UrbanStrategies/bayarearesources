%tr
  %td.top{:width=>'20px'}
    = check_box_tag "category_#{category.id}", true, session[:category_ids].include?(category.id), :class => 'category_checkbox'
  %td.top
    = category.name
- if category.services.present?
  %tr{:id => "category_#{category.id}_services"}
    %td{:colspan=>2}
      %table
        - for service in category.services
          = render :partial => 'service', :locals => {:category => category, :service => service}
