<script>
  $(function() {
  $(".category_checkbox").click(function() {
    var ID = this.id.split("_")[1];
    if ($('#' + this.id).is(':checked')) { 
      $.get("/locations.js?address=<%= params[:address] %>&miles=<%= params[:miles] %>", {"add_category":ID});
    } else { 
      $.get("/locations.js?address=<%= params[:address] %>&miles=<%= params[:miles] %>", {"remove_category":ID});
    }
    })
  })
</script>