<script>
  $(function() {
    $(".category_checkbox").click(function() {
      var ID = this.id.split("_")[1];
      if ($('#' + this.id).is(':checked')) { 
        $.get("/locations/show_category.js?address=<%= params[:address] %>&miles=<%= params[:miles] %>", {"category_id":ID});
      } else { 
        $.get("/locations/hide_category.js?address=<%= params[:address] %>&miles=<%= params[:miles] %>", {"category_id":ID});
      }
    });
  });
</script>
